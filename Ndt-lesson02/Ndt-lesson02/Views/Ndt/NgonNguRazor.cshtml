
@{
    ViewBag.Title = ">Ngôn Ngữ Razor";
}

<h2>Ngôn Ngữ Razor</h2>
<h3> biến </h3>
@{
    var name = " Nguyễn Danh Trường";
    int age = 20;
    DateTime dt = DateTime.Now;
}
<p>Họ tên:@name</p>
<p>Tuổi :@age</p>
<p>Time:@dt</p>
<hr />
<h3>câu lệnh if</h3>
@{
    if (age > 40)
    {
        <p>Tuổi@age=> Đã già</p>
    }
    else
    {
        <p> Còn trẻ </p>
    }
}
<hr />
<h3>loop:for,while,do...while,foreach...</h3>
@{
    int num = 10;
}
@for (int i = 0; i < num; i++)
{
    <li>@i =.@i*@i</li>
}
<h3>Mảng </h3>
@{
    string[] names = { "Nguyễn Danh A", "Đinh Công C", "Ngô Văn D", "Bùi Trà E" };
}
@foreach (var item in names)
{
    <p>@item</p>
}
@foreach (var item in ViewBag.names)
{
    <p>@item</p>
}
